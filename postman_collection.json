{
    "info": {
        "_postman_id": "c1f2b3a4-5d6e-7f8g-9h0i-j1k2l3m4n5o6",
        "name": "Desafio 2 API",
        "description": "Collection for testing the Desafio 2 API including Authentication and Role Management.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register Student",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 201\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has user data\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('id');",
                                    "    pm.expect(jsonData).to.have.property('name');",
                                    "    pm.expect(jsonData).to.have.property('email');",
                                    "    pm.expect(jsonData.role).to.eql('STUDENT');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\r\n    \"name\": \"Student User\",\r\n    \"email\": \"student@example.com\",\r\n    \"password\": \"Password123!\"\r\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register/student",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "register",
                                "student"
                            ]
                        }
                    },
                    "response": []
                },
